extends layout.pug

block content
    .all-posts
        each post in posts
            div(class='post-container' id=`post-container-${post.id}`)
                h3= post.title
                p(id=`post-content-${post.id}`)= post.content
                a(href=`/posts/${post.id}`) Take Me To This Post!
                if activeUser === post.userId
                    button(class='delete-btn' id=`delete-post-${post.id}`) Delete